$(function(){
	$('#datagrid').datagrid({
	    url:'videoAudioRest/list',
	    method:'post',
	    fit:true,
	    fitColumns:true,
	    rownumbers:true,
	    singleSelect:false,
	    pagination:true,
	    pageSize:30,
	    view:detailview,
	    columns:[[
	    	{field:'ck',checkbox:true},
	    	{field:'id',title:'id',hidden:true},
	        {field:'videoAudioName',title:'视频名称',width:80},
	        {field:'introduce',title:'视频简介',width:80},
	        {field:'praiseNumber',title:'获赞总数',width:50},
	        {field:'commentNumber',title:'评价总数',width:80},
	        {field:'teacherName',title:'老师名称',width:80},
	        {field:'courseName',title:'所属课程',width:80}
	    ]],
	    detailFormatter: function(rowIndex, rowData){
			return 	'<table class="detailTable">'+
			             '<tr>'+
			                 '<td>视频名称:</td><td>'+ rowData.videoAudioName +'</td>'+
			             '</tr>'+
			             '<tr>'+
			                 '<td>视频简介:</td><td>'+ rowData.introduce +'</td>'+
			             '</tr>'+
			             '<tr>'+
			                 '<td>获赞总数:</td><td>'+ rowData.praiseNumber +'</td>'+
			             '</tr>'+
			             '<tr>'+
			                 '<td>评价总数:</td><td>'+ rowData.commentNumber +'</td>'+
			             '</tr>'+
			             '<tr>'+
			                 '<td>老师名称:</td><td>'+ rowData.teacherName +'</td>'+
			             '</tr>'+
			             '<tr>'+
			                 '<td>所属课程:</td><td>'+ rowData.courseName +'</td>'+
			             '</tr>'+
			             '<tr>'+
			                 '<td>是否是短视频:</td><td>'+ rowData.isShortStr +'</td>'+
			             '</tr>'+
			             '<tr>'+
			                 '<td>类型:</td><td>'+ rowData.isVideoStr +'</td>'+
			             '</tr>'+
			             '<tr>'+
			                 '<td>音频:</td><td><audio controls="controls" src="'+rowData.audioUrl+'"></audio></td>'+
			             '</tr>'+
			             '<tr>'+
			                 '<td>视频:</td><td><video controls="controls" style="width:300px;height:auto;" src="'+rowData.videoUrl+'"></video></td>'+
			             '</tr>'+
			         '</table>';
		},
	    rowStyler:function(index,row){
			if (row.useAble==0){
				return 'background-color:pink;color:black;';
			}
		},
	    toolbar: [{
			iconCls: 'icon-search',
			text:"查询",
			handler: function(){
				$('#searchDialog').dialog('open');
			}
		},{
			iconCls: 'icon-add',
			text:"添加",
			handler: function(){
				$('#addDialog').dialog('open');
			}
		},{
			iconCls: 'icon-ok',
			text:"启用",
			handler: function(){
				updateData(1);
			}
		},{
			iconCls: 'icon-cancel',
			text:"禁用",
			handler: function(){
				updateData(0);
			}
		}]
	});
	
	//更新数据
	function updateData(useAble){
		var rows = $('#datagrid').datagrid("getSelections");
		if(rows!=null&&rows.length>0){
			$.messager.confirm({
				title: '提示',
				msg: '是否确定执行',
				fn: function(flag){
					if(flag){
						var ids = [];
						//循环放入选中行的id
						for(var i=0;i<rows.length;i++){
							var row = rows[i];
							ids.push(row.id);
						}
						
						$.ajax({
				    		url:"videoAudioRest/updateUseAble",
				    		type:"post",
				    		data:{
				    			"ids":ids.join(),
				    			"po.useAble":useAble
				    		},
				    		async:true,
				    		dataType:"json",
				    		success:function(dto){
				    			$.messager.alert('提示',dto.msg);
				    			$("#datagrid").datagrid("reload");
				    		}
				    	});
					}
				}
			});
		}else{
			$.messager.alert('提示',"至少选择一条");
		}
    } 
});

$(function(){
	$('#searchDialog').dialog({
	    title: '条件查询',
	    width: 1000,
	    height: 400,
	    closed: true,
	    modal: true,
	    buttons:[{
			text:'提交',
			handler:function(){
				$('#datagrid').datagrid('load',$("#searchDialog form").serializeJson());
				$('#searchDialog form').form('reset');
				$('#searchDialog').dialog('close');
			}
		},{
			text:'重置',
			handler:function(){
				$('#searchDialog form').form('reset');
			}
		}]
	});
});

//添加信息
$(function(){
	//获取所有的完整课程
	$('#courseId').combobox({
	    url:'courseFullRest/getCourseList',
	    valueField:'id',
	    textField:'courseName',
	    panelHeight:"auto",
	    panelMaxHeight:"200"
	});
	
	$('#addDialog').dialog({
	    title: '添加',
	    width: 1000,
	    height: 500,
	    closed: true,
	    modal: true,
	    buttons:[{
			text:'提交',
			handler:function(){
				if(validate("addDialog form")){
					$.ajax({
						url:"videoAudioRest/saveOrUpdate",
						type:"post",
						data:$("#addDialog form").serialize(),
						async:true,
						dataType:"json",
						success:function(dto){
							$.messager.alert('提示',dto.msg);
							$('#addDialog').dialog("close");
							$('#addDialog form').form('reset');
							$("#datagrid").datagrid("reload");
						}
					});
				}
			}
		},{
			text:'重置',
			handler:function(){
				$('#addDialog form').form('reset');
			}
		}]
	});
	
	//图片上传
	$('#uploadComponent').dialog({
	    title: '上传图片',
	    width: 300,
	    height: 180,
	    closed: true,
	    cache: false,
	    modal: true,
	    buttons:[{
			text:'上传',
			iconCls:'icon-ok',
			handler:function(){
				var $progressBorder = $('.progressBorder');
	            $('#myFile').uploadFile({
	                beforeSend:function(){
	                	$progressBorder.show();
	                },
	                uploadProgress:function(event, position, total, percent){
	                	$progressBorder.find("span").text(percent+'%');
	                	$progressBorder.find(".progressDiv").width(percent+'%');
	                    if(percent>=100){
	                    	$progressBorder.find("span").text('0%');
	                    	$progressBorder.find(".progressDiv").width('0%');
	                    	$('#uploadComponent').dialog('close');
	                    }
	                },
	                success:function(dto){
	                	if(dto.type==1){
	                		$(".videoUrl").textbox("setValue",dto.httpUrl);
	                	}
	                	if(dto.type==2){
	                		$(".audioUrl").textbox("setValue",dto.httpUrl);
	                	}
	                	
                		$("#uploadComponent form").form('reset');
	                }
	            });
			}
		}]
	});
});