body{
	padding-top: 40px;
}
#videoFixDiv{
	z-index: 100;
	background: #FFFFFF;
}
#currentVideo{
	width: 100%;
}
#videoInfo{
	padding: 10px 0px;
	background:#26A0DA;
	border-bottom-left-radius: 15px;
	border-bottom-right-radius: 15px;
	position: relative;
}
#attention{
	position: absolute;
	top:5px;
	right:5px;
}
#attention span{
	font-size: 14px;
	color: #FFFFFF;
}
.teacherPhoto{
	text-align: center;
	width: 40%;
	height: 35px;
}
.teacherPhoto img{
	width: 35px;
	height: 100%;
	border-radius: 35px;
	vertical-align: middle;
}
.teacherPhoto span{
	font-size: 12px !important; 
	color: #FFFFFF;
}
#videoInfo table{
	width: 80%;
	margin: auto;
}
#videoInfo table td{
	width: 25%;
	text-align: center;
}
#videoInfo table td img{
	width: 50%;
}
.videoInfoShow{
	padding: 0px 10px;
	color: white;
}
.mui-ellipsis{
	font-size: 10px !important;
}
#submit{
	margin-top: -15px;
	margin-bottom: 10px;
	width: 100%;
}
#commentDiv{
	padding: 10px;
	background: #FFFFFF;
}
.commentListClass{
	border-bottom: 1px dashed #26A0DA;
	padding: 5px 0px;
}
.commentListClass div{
	min-height: 60px;
}
.commentListClass dl{
	font-size: 12px;
	color:#777;
}
.commentListClass dl dd span{
	color: cornflowerblue;
}
.commentListClass dl dt{
	margin-top: 10px;
}
.teacherPhotoImg{
	width: 50px !important;
	height: 50px;
}
.commentP{
	font-size: 14px;
	color: #777777;
}
.timeP{
	font-size: 12px;
	color: #777777;
}
.commentShow img{
	border: 1px solid #ededed;
}
.commentListClass div:first-of-type{
	position: relative;
}
.commentListClass div:first-of-type a{
	position: absolute;
	top:5px;
	right: 5px;
}
.commentListClass div:last-of-type{
	font-size: 12px;
	color: #777777;
	line-height: 100%;
	text-align: center;
}
.commentListClass div:last-of-type img{
	vertical-align: bottom;
}
#loadMore{
	width: 100%;
	height: 50px;
	padding: 10px;
	text-align: center;
}
#loadMore button:hover{
	color: white;
	background: #26A0DA;
}
#loadMore button{
	border: 1px solid #ededed;
	width: 120px;
	height: 30px;
	background:white;
	color: #777777;
}